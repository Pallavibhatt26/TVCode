			//d.findElement(By.linkText("Skin Care")).click();
			d.findElement(By.xpath("//a[contains(@linkText,'Motor']")).click();
			
			List <WebElement> linkl = d.findElements(By.tagName("a"));
			System.out.println(linkl.size());
			
			for (int i = 0 ; i < linkl.size();i++)
			{
				System.out.println(linkl.get(i).getText());
			}
			}
			

}

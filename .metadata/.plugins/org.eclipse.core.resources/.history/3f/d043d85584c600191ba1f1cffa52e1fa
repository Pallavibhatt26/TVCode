import org.openqa.selenium.chrome.ChromeOptions;

public class LoginPage {

	public static void main(String[] args)
		{
		 String exe = "chromedriver.exe";
			final String webSite = "https://www.myntra.com";
			String binaryPath = "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe";
			String path = "C:\\Users\\LENOVO\\Downloads\\selenium-chrome-driver-2.26.0.jar\\chromeDriver.exe";
			System.setProperty("webdriver.chrome.driver", path);
			ChromeOptions chromeOpt= new ChromeOptions();
			//chromeOpt.setBinary(binaryPath);
			
			
			WebDriver driver = new ChromeDriver ();
			driver.get(webSite);
			//driver.manage ().timeouts ().implicitlyWait (10, TimeUnit.SECONDS);
